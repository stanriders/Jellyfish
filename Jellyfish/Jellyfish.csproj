<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net472</TargetFramework>
  </PropertyGroup>

  <Target Name="CopyShaders" AfterTargets="Build">
    <Copy SourceFiles="Render\Shaders\SimpleOut.frag" DestinationFolder="$(OutDir)\shaders" />
    <Copy SourceFiles="Render\Shaders\SimpleOut.vert" DestinationFolder="$(OutDir)\shaders" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="OpenTK" Version="3.1.0" />
  </ItemGroup>

</Project>
